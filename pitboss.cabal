    -- other-modules:
    -- other-extensions:
    build-depends:    base,
                      aeson,
                      aeson-pretty,
                      array,
                      containers,
                      hashable,
                      insert-ordered-containers,
                      lens,
                      mtl,
                      random,
                      text,
    hs-source-dirs:   src
    default-language: GHC2021

executable pitboss
    ghc-options:      -fhpc
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        base,
        pitboss,

    hs-source-dirs:   app
    default-language: GHC2021

test-suite pitboss-test
    ghc-options:      -fhpc
    default-language: GHC2021
    other-modules:    Pitboss.TestHelpers
                      Pitboss.Integration.BoutFlowSpec
                      Pitboss.Integration.TimelineSpec
                      Pitboss.Orchestration.DeltaGenSpec
                      Pitboss.Simulation.IntentToEventSpec
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base,
        insert-ordered-containers,
        lens,
        mtl,
        hspec,
        pitboss,
        random,
        text,
    build-tool-depends:
        hspec-discover:hspec-discover
