cabal-version:      3.0
name:               pitboss
version:            0.1.0.0
synopsis:           Pitboss: A Blackjack Toolkit and Simulator
-- description:
license:            AGPL-3.0-only
license-file:       LICENSE
author:             Pitboss
maintainer:         pitboss.sim@gmail.com
-- copyright:
category:           Math
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Pitboss.Blackjack.Action
                      Pitboss.Blackjack.Card
                      Pitboss.Blackjack.Chips
                      Pitboss.Blackjack.Deck
                      Pitboss.Blackjack.Hand
                      Pitboss.Blackjack.Hand.Category
                      Pitboss.Blackjack.Hand.Score
                      Pitboss.Blackjack.Offering
                      Pitboss.Blackjack.Offering.Matter
                      Pitboss.Blackjack.Offering.RuleSet
                      Pitboss.Blackjack.Offering.WellKnown
                      Pitboss.World
                      Pitboss.World.Constructors
                      Pitboss.World.State.Actor
                      Pitboss.World.State.Hand
                      Pitboss.World.State.Offering
                      Pitboss.World.State.Round
                      Pitboss.World.State.Shoe
                      Pitboss.World.State.Spot
                      Pitboss.World.State.Table
                      Pitboss.World.State.Types.BoundedEnum
                      Pitboss.World.State.Types.Clocked
                      Pitboss.World.State.Types.DeltaDriven
                      Pitboss.World.State.Types.FiniteMap
                      Pitboss.World.State.Types.Occupancy
                      Pitboss.World.State.Types.Reversible
                      Pitboss.World.State.Types.Snapshot
                      Pitboss.World.Types.EntityRef
                      Pitboss.World.Types.Identifier
                      Pitboss.World.Types.Registry
                      Pitboss.Sim.FSM.Hand
                      Pitboss.Sim.FSM.Round
                      Pitboss.Sim.FSM.Round.ENHC
                      Pitboss.Sim.FSM.Round.Peek
                      Pitboss.Sim.FSM.Types.Transitionable
                      Pitboss.Strategy.Chart.Error
                      Pitboss.Strategy.Chart.Interpret
                      Pitboss.Strategy.Chart.Overlay
                      Pitboss.Strategy.Chart.Parse
                      Pitboss.Strategy.Chart.Types
                      Pitboss.Strategy.Chart.Validate
                      Pitboss.Strategy.Types
    -- other-modules:
    -- other-extensions:
    build-depends:    base ^>=4.18.2.1,
                      aeson,
                      aeson-pretty,
                      array,
                      containers,
                      hashable,
                      insert-ordered-containers,
                      lens,
                      random,
                      text,
    hs-source-dirs:   src
    default-language: GHC2021

executable pitboss
    import:           warnings
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        base ^>=4.18.2.1,
        pitboss

    hs-source-dirs:   app
    default-language: GHC2021

test-suite pitboss-test
    import:           warnings
    default-language: GHC2021
    -- other-modules:
    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base ^>=4.18.2.1,
        pitboss
